<h1 class="movie-detail__title _h1">{{ title }}</h1>
<div class="movie-detail__trailer">
	<iframe id="ytplayer" class="media" type="text/html" width="100%" height="100%" src="{{ video.url }}" frameborder="0"/>
</div>
<div class="movie-detail__overview">
	<div class="movie-detail__overview-head">
		<div>
			<p class="_p2">Release date: {{ release_date }}</p>
			<p class="_p2">Runtime: {{ runtime }} mins</p>
			<ul class="movie-detail__genres">
			{{#each genres}}
				<li class="_p1">{{name}}</li>
			{{/each}}
			</ul>
		</div>

		<div class="movie-rating">
			<i class="material-icons">star</i>
			<span>{{ vote_average }}</span>
		</div>
	</div>
	{{#if tagline}}
	<p class="movie-detail__tagline _h2">"{{ tagline }}"</p>
	{{/if}}
	<p class="_p1">{{ overview }}</p>
</div>

